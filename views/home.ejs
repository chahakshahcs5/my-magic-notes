<%- include('includes/navigation.ejs') %>
<div class="container">
    <h1 class="my-3">Welcome to Magic Notes</h1>
    <div class="card-2">
      <div class="card-body" style="background-color: rgb(239, 246, 252)">
        <form action="/add-notes", method="POST">
          <h5 class="card-title">Title</h5>
          <input type="text" name="title" id="addTitle" class="my-3" size="120"  rows="1" required>
          <h5 class="card-title">Description</h5>
          <input type="text" name="description" id="addDescription" class="my-3" size="120" rows="3" style="height: 70px;" required>
          <button type="submit" id="addBtn" class="btn btn-primary" style="display: block;"button>Add Note </button>
          <input type="hidden" name="user_id" value="<%= user_id %>">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </form>
        </div>
      </div>
    </form>
        
    <h1 class="mt-3">Your Notes</h1>
    <hr />
    
      <div class="row mb-5" id="div">
        <% if (notes[0]) { %>
          <% notes.forEach(note => { %>
            <div class="card col-sm-4 card-note" style="width: 18rem; background-color: rgb(239, 246, 252);
            height: 250px;
            overflow-y: auto;
            position: relative;
            margin: 20px 25px 40px 15px;">
              <div class="card-note-body" style="padding: 10px;
              border-radius: 6px;">
                <h5 class="card-title"><%= note.title %></h5>
                <div>
                <p class="card-Description" style="max-height: 140px;
                overflow-y: auto;"><%= note.description %></p>
                </div>
                <form action="/delete-note" method="POST">
                  <button class="btn btn-primary" type="submit" style="position: absolute;
                  bottom: 10px;" button> Delete Note </button>
                  <input type="hidden" name="noteId" value="<%= note._id %>">
                  <input type="hidden" name="user_id" value="<%= user_id %>">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                </form>
                  
              </div>
            </div>
          <% }) %>
        <% }else { %>
          <p>Nothing to show, add notes here!!</p>
        <% } %>
      </div>
    </form>
    
  </div>

<%- include('includes/end.ejs') %>