<%- include('includes/navigation.ejs') %>
<% if (errorMessage) { %>
  <div class="error">
    <%= errorMessage %>
  </div>
<% } %>
<div class="container resetPassword">
    <form class="form" action="/reset" method="POST">
        <div class="row mb-3">
          <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-10">
            <input type="email" class="form-control" id="inputEmail3" name="email" required>
          </div>
        </div>
        <button type="submit" id="btn" class="btn btn-primary">Reset Password</button>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      </form>
</div>


<%- include('includes/end.ejs') %>